<Page x:Class="CMCS.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login Page">
    <Grid Margin="20" Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Contract Monthly Claim System" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Username:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="UsernameTextBox" Margin="5" Width="200" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Password:" Margin="5" VerticalAlignment="Center"/>
        <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="PasswordBox" Margin="5" Width="200" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Role:" Margin="5" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="RoleComboBox" Margin="5" Width="200" HorizontalAlignment="Left">
            <ComboBoxItem Content="Lecturer" IsSelected="True"/>
            <ComboBoxItem Content="Coordinator"/>
            <ComboBoxItem Content="Academic Manager"/>
        </ComboBox>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="LoginButton" Content="Login" Click="LoginButton_Click" 
                    Width="80" Height="30" Margin="10" Background="LightGreen"/>
            <Button x:Name="ExitButton" Content="Exit" Click="ExitButton_Click" 
                    Width="80" Height="30" Margin="10" Background="LightCoral"/>
        </StackPanel>

        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" x:Name="ErrorTextBlock" Foreground="Red" 
                   TextWrapping="Wrap" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Page>