<Page x:Class="CMCS.Views.LecturerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Lecturer Dashboard">
    <Grid Margin="20" Background="LightGreen">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Submit Monthly Claim" 
                   FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Staff Number:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="StaffNumberTextBox" Margin="5" Width="200" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Hours Worked:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="HoursWorkedTextBox" Margin="5" Width="200" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Hourly Rate:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="HourlyRateTextBox" Margin="5" Width="200" HorizontalAlignment="Left"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="SubmitClaimButton" Content="Submit Claim" Click="SubmitClaim_Click" 
                    Width="100" Height="30" Margin="10" Background="LightBlue"/>
            <Button x:Name="BackButton" Content="Logout" Click="Back_Click" 
                    Width="80" Height="30" Margin="10" Background="LightCoral"/>
        </StackPanel>

        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" x:Name="ResultTextBlock" 
                   TextWrapping="Wrap" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Page>