<Page x:Class="CMCS.Views.CoordinatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Coordinator Dashboard">
    <Grid Margin="20" Background="LightYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Pending Claims for Verification" 
                   FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <ListView Grid.Row="1" x:Name="ClaimsListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Staff Number" DisplayMemberBinding="{Binding StaffNumber}" Width="100"/>
                    <GridViewColumn Header="Hours" DisplayMemberBinding="{Binding HoursWorked}" Width="80"/>
                    <GridViewColumn Header="Rate" DisplayMemberBinding="{Binding HourlyRate}" Width="80"/>
                    <GridViewColumn Header="Total" DisplayMemberBinding="{Binding TotalAmount}" Width="100"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="VerifyClaimButton" Content="Verify Claim" Click="VerifyClaim_Click" 
                    Width="100" Height="30" Margin="10" Background="LightGreen"/>
            <Button x:Name="RejectClaimButton" Content="Reject Claim" Click="RejectClaim_Click" 
                    Width="100" Height="30" Margin="10" Background="LightCoral"/>
            <Button x:Name="LogoutButton" Content="Logout" Click="Logout_Click" 
                    Width="80" Height="30" Margin="10" Background="LightBlue"/>
        </StackPanel>
    </Grid>
</Page>